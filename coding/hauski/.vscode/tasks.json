{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo: fmt",
      "type": "shell",
      "command": "cargo fmt --all"
    },
    {
      "label": "cargo: clippy",
      "type": "shell",
      "command": "cargo clippy --all-targets --all-features -- -D warnings",
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "cargo: build",
      "type": "shell",
      "command": "cargo build --workspace",
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "cargo: test",
      "type": "shell",
      "command": "cargo test --workspace -- --nocapture",
      "problemMatcher": ["$rustc"]
    }
  ]
}